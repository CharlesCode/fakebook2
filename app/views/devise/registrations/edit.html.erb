<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "well" }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Edit User</legend>
        <%= f.input :email %>
        <%= f.input :password, hint: "Leave blank if you don't want to change it" %>
        <%= f.input :password_confirmation %>
        <%= f.input :current_password, hint: "We need your current password to confirm your changes." %>
        <div><%= f.button :submit, "Update" %></div>
      </fieldset>
      <% end %>
    </div>
  </div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
